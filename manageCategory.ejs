                <div class="addCategoryFields">
                   
              </div>
          
              <div class="modal-footer">
                <input type="submit" class="btn btn-success" id="btnSend" value="Modifier">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
              </div>
            </div>
          </form>

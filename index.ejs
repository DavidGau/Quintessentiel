        <script>
            $.ajax({
                url: "http://localhost:8000/ajaxRequest/sliderFeature",
                method: "POST",

                success: function(response) {
                    console.log(response);
                    //alert("good");
                    $("#slider-featured").html(response);

                    let isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);
                    if (isMobile) {
                        $('.sliderFeatured').slick({
                            infinite: true,
                            slidesToShow: 1,
                            slidesToScroll: 1,
                            autoplay: true,
                            autoplaySpeed: 3000
                                /*arrows: true*/

                        });
                        let presentation = document.getElementById("presentation");
                        presentation.classList.add("index-presentation-mobile");

                        let temoignage = document.getElementById("slider-temoignages");
                        temoignage.classList.add("slider-temoignages-mobile");

                        for (let i = 0; i < 6; i++) {
                            let temoignage = document.getElementById("carre" + (i + 1));
                            temoignage.classList.add("c-mobile");
                        }

                    } else {
                        console.log('fml');


                        $('.sliderFeatured').slick({
                            infinite: true,
                            slidesToShow: 3,
                            slidesToScroll: 3,
                            arrows: true

                        });
                    }

                },
                error: function(response) {
                    console.log(response);
                    alert("Erreur dans l'affichage du slider featured");
                }
            });

            $.ajax({
                url: "http://localhost:8000/ajaxRequest/sliderTemoignages",
                method: "POST",

                success: function(response) {
                    // console.log(response);
                    //alert("good");
                    $("#slider-temoignages").html(response);
                    $('.slider-temoignages').slick({
                        infinite: true,
                        slidesToShow: 1,
                        slidesToScroll: 1,
                        arrows: false,
                        autoplay: true,
                        autoplaySpeed: 3000,

                    });
                },
                error: function(response) {
                    console.log(response);
                    alert("Erreur dans l'affichage du slider featured");
                }
            });
            $(document).ready(function() {
                $('.slider-main').slick({
                    infinite: true,
                    dots: true
                        /*autoplay: true,
                        autoplaySpeed: 3000,*/

                });
            });


            $(document).ready(function() {

            });

            function sliderFeaturedClick(id) {
                document.location.href = './productInfo?id=' + id;
            }
        </script>

<body>
    <%include ./includes/appNavbar.ejs%>
        <div class="recipe-header">
            <div class="logo">
                <img src="./images/logo.png" />
            </div>
            <div class="title">
                Gestion des recettes
            </div>
        </div>
        <div class="mg-product-top-line middle">
            <div class="wrapper-left-qty">
                <div class="sub-left-wrapper">
                    <label>Trier par:</label>
                    <select id="orderBySelect">
							<option>Quantit√©</option>
						</select>
                </div>
            </div>
            <div class="wrapper-right-btn">
                <div class="wrapper-btn">
                    <a href="./addRecipe" class="btnApp" target="_blank">+</a>
                </div>
            </div>
        </div>
        <div class="table">
            <div class="border">
                <table class="table-recipe">
                    <thead class="table-recipe-header">
                        <tr>
                            <th>Recette</th>
                            <th>Description</th>
                            <th>Instructions</th>
                        </tr>
                    </thead>
                    <tbody id="recipes">

                    </tbody>
                </table>
            </div>
        </div>

        <script>
            function openRecipe(id) {
                console.log(id);
                document.location = './updateRecipe?id=' + id;
            }

            $.ajax({
                url: "http://localhost:5000/ajaxRequest/manageRecipe",
                method: "POST",

                success: function(response) {
                    console.log(response);
                    $('#recipes').html(response);
                },
                error: function(response) {
                    console.log(response);
                    alert("Erreur");
                }
            });
        </script>
